<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:text="Parking Name"
        android:textColor="#fcfbfb"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />


    <RelativeLayout
        android:id="@+id/msglayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:layout_margin="10dp"
        android:background="@color/black">

        <TextView
            android:id="@+id/txt_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/quote1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="italic" />


    </RelativeLayout>


    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msglayout"
        android:layout_marginLeft="12dp"
        android:text="Total Parking" />


    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="7dp"
        android:text="Busy Parking" />


    <TextView
        android:id="@+id/txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_2"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="7dp"
        android:text="Free Parking" />


    <TextView
        android:id="@+id/txt_total_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msglayout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="17dp"
        android:text="Total Parking" />


    <TextView
        android:id="@+id/txt_busy_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="17dp"
        android:text="Busy Parking" />

    <TextView
        android:id="@+id/txt_free_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="17dp"
        android:text="Free Parking" />


    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/btn_accpt_job_"
        android:layout_below="@+id/txt_free_p"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:verticalSpacing="10dp" />
    <!--    TODO
        android:columnWidth="90dp"
        android:stretchMode="columnWidth"-->

    <!--    TODO button panel -->

    <Button
        android:id="@+id/btn_close_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:background="@color/colorPrimary"
        android:text="Close"
        android:textColor="#FFFDDD" />

    <Button
        android:id="@+id/btn_accpt_job_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="6dp"
        android:layout_marginBottom="7dp"
        android:layout_toStartOf="@+id/btn_close_popup"
        android:background="@color/colorPrimary"
        android:text="Accept"
        android:textColor="#FFFDDD" />


</RelativeLayout>
